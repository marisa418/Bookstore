<link rel="stylesheet" href="/public/popup.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
<div class="row">                              
    <div class="col-sm-6 px-5 py-2 Acc">
    <p> <font size="5px"> Personal Profile  &nbsp;&nbsp;</font><font color="0000CC" onclick="openFormUser()" style="cursor:hand" >EDIT</font> </p>  
     <div>
      <% user.forEach(function(user){  %>
        <p class="mb-1"><font size="4px"><%= user.first_name %>&nbsp;&nbsp;<%= user.last_name %></font></p>
        <p class="mb-1"><font size="3px"> <%= user.email %></font></p>
        <p class="mb-1"><font size="3px"> <%= user.phone %></font></p>
      </div>
    </div>
    <div class="col-sm-6 px-5 py-2 Add">
     <p> <font size="5px"> Address Book&nbsp;&nbsp; </font> <font style="cursor:hand" color="0000CC" onclick="openFormAdd()" >EDIT</font> </p>   
     <p class="mb-1"><font size="4px"><%= user.first_name %>&nbsp;&nbsp;<%= user.last_name %></font></p>
     <p class="mb-1"><font size="3px"> <%= user.address_information.address %>,<%= user.address_information.province %>,<%= user.address_information.district %>,<%= user.address_information.postcode %></font></p>           
     <p class="mb-1"><font size="3px"> <%= user.phone %></font></p>
    
     <div >
      </div>   
    </div>

    <div class="form-popup" id="FormAdd">
    <div class="row"> 
    <div class="col-sm-2"></div> 
    <div class="col-sm-7">
      <form action='/user?_method=PUT'  method='POST' >
        <h3 class="px-5 py-3">Edit My Address</h3>
        <div class="mb-1 px-5">
          <div class="row">
            <div class="col-sm-6 hidden">
                <input type='text'class="form-control hidden"  name='check_data' value="address_info">
            </div> 
            <div class="col-sm-6">
                <label class="form-label">Address</label>
                <input type='text'class="form-control"  name='address' id="address" placeholder='address' value="<%= user.address_information.address %>">
            </div>  
    
            <div class="col-sm-6">
                <label class="form-label">Province</label>
                <input type='text' class="form-control" name='province' id="province" placeholder='province' value="<%= user.address_information.province %>">
            </div>              
        </div>
      </div>
      <div class="mb-1 px-5">
        <div class="row">
          <div class="col-sm-6">
              <label class="form-label">District</label>
              <input type='text'class="form-control"  name='district' id="district" placeholder='district' value="<%= user.address_information.district %>">
          </div>  
    
          <div class="col-sm-6">
              <label class="form-label">Postcode</label>
              <input type='text' class="form-control" name='postcode' id="postcode" placeholder='postcode' value="<%= user.address_information.postcode %>">
          </div>              
      </div>
    </div>
    
        <button type="submit" class="btn px-5">บันทึก</button>
        <button type="button" class="btn cancel" onclick="closeForm()">ยกเลิก</button>
    </form>  
    </div>
    <div class="col-sm-4"></div>
    </div>
    </div>

    

    <div class="form-popup" id="FormUser">
        <div class="row"> 
        <div class="col-sm-2"></div> 
        <div class="col-sm-7">
      <form action='/user?_method=PUT'  method='POST' >
        <h3 class="px-5 py-3">Edit My Account </h3>
        <div class="mb-1 px-5">
          <div class="row">
            <div class="col-sm-5 hidden">
                <input type='text'class="form-control hidden"  name='check_data' value="user_info">
            </div> 
            <div class="col-sm-6">
                <label class="form-label">First name</label>
                <input type='text'class="form-control"  name='first_name' id="first_name" placeholder='First name' value="<%= user.first_name %>">
            </div>  
    
            <div class="col-sm-6">
                <label class="form-label">Last name</label>
                <input type='text' class="form-control" name='last_name' id="last_name" placeholder='Last name' value="<%= user.last_name %>">
            </div>              
        </div>
      </div>
      <div class="mb-1 px-5">
        <div class="row">
          <div class="col-sm-6">
              <label class="form-label">Email</label>
              <input type='text'class="form-control"  name='email' id="email" placeholder='Email' value="<%= user.email %>">
          </div>  
    
          <div class="col-sm-6">
            <label class="form-label">Phone</label>
            <input type='text' class="form-control" name='phone' id="phone" placeholder='Phone' value="<%= user.phone %>">
        </div>              
      </div>
    </div>  
    <div class="col-sm-6 px-5">
        <label  class="form-label">Gender</label>
        <select class="col-md-12" aria-label="Default select example" name='gender' value="<%= user.gender %>"> 
        <option value="ชาย">ชาย</option>
        <option value="หญิง">หญิง</option>
        <option value="ไม่ระบุ">ไม่ระบุ</option>
      </select>
      </div>  
        <button type="submit" class="btn px-5">บันทึก</button>
        <button type="button" class="btn cancel" onclick="closeForm()">ยกเลิก</button>
    </form> 
</div> 
    <div class="col-sm-3"></div>  
    </div>

    
    <script>
    function openFormAdd() {
      document.getElementById("FormAdd").style.display = "block";
    }
    function openFormUser() {
      document.getElementById("FormUser").style.display = "block";
    }
    function closeForm() {
      document.getElementById("FormAdd").style.display = "none";
      document.getElementById("FormUser").style.display = "none";
    }
    </script>

  </div> 
  <% }) %>