<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
<link rel="stylesheet" href="/public/popup.css">  
<%- include('../partials/head_admin.ejs') %>      
<% catalog.forEach(function(catalog){  %>
        <p class="py-1" ></p>
        <div class="row mb-1" >
            <div class="col-sm-3" >               
            </div>
            <div class="col-sm-7" id="show_detail">
                <div class="row mb-1 " >
                    <div class="col-sm-2" >               
            <a href="/catalog/<%= catalog._id %>"><img src="<%= catalog.image %>" width="70px"></a>
                    </div>
                    <div class="col-sm-5">
            <h5 class="mb-1">ID: <%= catalog._id %></h5>
            <h6 class="mb-1">ชื่อหนังสือ: <%= catalog.name %></h6>
            <p class="mb-15">ผู้ขาย: <%= catalog.seller_name%></p>
            
                    </div>           
                    <div class="col-sm-2">
                <span style="display:inline-block; height:55px;"></span>
                <form id = 'delete-form' action = '/admin/<%= catalog._id %>?_method=DELETE' method='POST'>
                <button  type="submit" >ลบ</button>   
              </form>               
                    </div>
                </div>
            </div>

           

            <div class="col-sm-2"> 
                
            </div>
        </div>  
<%  }) %> 
    
<script>
    function openForm() {
      document.getElementById("Form_confirm").style.display = "block";
      document.getElementById("show_detail").style.display = "none";
    }
    function closeForm() {
      document.getElementById("Form_confirm").style.display = "none";
      document.getElementById("show_detail").style.display = "block";
    }
    </script> 
