<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book Store</title>
    <link rel="stylesheet" href="/public/catalog.css">
</head>
<body>
  
    <div class="images">
        <div class="album py bg-light" >
            <div class="container">
              <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                <% catalog.forEach(function(catalog){  %>
                <div class="col-lg-2 col-md-4 col-sm-6 col-xs-6">
                  <div class="card shadow-sm showimg">
                      <div>
                    <a href="/catalog/<%= catalog._id %>"><img src='<%= catalog.image %>' class='card-img-top' width="150px" height="250px"></a>
                     </div>
                    <div class="card-body">
                        <div >
                          <a href="/catalog/<%= catalog._id %>"><p class = 'card-title' ><%= catalog.name %></p> </a>
                      </div>  
                    <div >
                      <h5 class="card-text">à¸¿ <%= catalog.price %></h5>
                    </div>                  
                    </div>
                  </div>
                </div>
                <% }); %>
              </div>
            </div>
          </div>
      </div>


</body>
</html>



