<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
<link rel="stylesheet" href="/public/home.css">
<%- include('partials/header.ejs') %>         
<div class="row">

    <div class="col-sm-6 bg_home01" >
      <p align="center"> <a href="/catalog"> <img src="/image/home02.png"></a></p>
    </div>
    <div class="col-sm-6 bg_home02">
        <p align="center">  <img src="/image/home03.png"></p>
    </div>

</div>

<div class="col-sm-12 bg_home03">
  <h2 class="py-2 px-5">หนังสือแนะนำ</h2>  
</div>
<div class="row py-2">

    <div class="col-sm-1 " >
      
    </div>
    <div class="col-sm-10 py-2">
        <div class="images">
            <div class="album py bg-light" >
                <div class="container">
                  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                    <% i=0 %>
                        <% catalog.forEach(function(catalog){  %>
                          <% i+=1 %>
                          <% if ( i > "0" && i <= "6"){  %>
                    <div class="col-lg-2 col-md-4 col-sm-6 col-xs-6">
                      <div class="card shadow-sm showimg">
                          <div>
                        <a href="/catalog/<%= catalog._id %>"><img src='<%= catalog.image %>' class='card-img-top' width="150px" height="250px"></a>
                         </div>
                        <div class="card-body">
                            <div >
                              <a href="/catalog/<%= catalog._id %>"><p class = 'card-title' ><%= catalog.name %></p> </a>
                          </div>  
                        <div >
                          <h5 class="card-text">฿ <%= catalog.price %></h5>
                        </div>                  
                        </div>
                      </div>
                    </div>
                    <% } %>
                    <% }); %>
                  </div>
                </div>
              </div>
          </div>

    </div>
    <div class="col-sm-1 " >
      
    </div>

</div>
    

<%- include('partials/footer.ejs') %>

